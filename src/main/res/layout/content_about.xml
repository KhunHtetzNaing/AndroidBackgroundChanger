<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.htetznaing.droidxbg.About"
    tools:showIn="@layout/activity_about">

<TextView
    android:textSize="15sp"
    android:textStyle="bold"
    android:textColor="#2196F3"
    android:text="App Name and Info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:text="App Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Android Background Changer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="5dp"
        android:text="Version"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="1.0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:text="Icon Credit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textStyle="bold"
        android:text="Android Asset Studio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:autoLink="web"
        android:textSize="13sp"
        android:text="https://romannurik.github.io/AndroidAssetStudio/index.html"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:text="Developed By"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textStyle="bold"
        android:text="Khun Htetz Naing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:text="Contact Me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Facebook"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:autoLink="all"
        android:text="https://www.fb.com/Khun.Htetz.Naing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
